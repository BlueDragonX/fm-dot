#!/bin/bash

LOCKIMG=$(grep i3lock "${HOME}/.i3/config" | sed -r -e 's/.*-i\s+(\S+)\s.*/\1/g')
LOCK="i3lock -i $LOCKIMG -t"
BLANK="$LOCK -d"

case $1 in
suspend)
    echo "Suspending to RAM..."
    eval $LOCK 
    sudo /usr/sbin/pm-suspend
    ;;
hibernate)
    echo "Suspending to disk..."
    eval $LOCK 
    sudo /usr/sbin/pm-hibernate
    ;;
reboot)
    echo "Rebooting..."
    sudo /sbin/shutdown -r now
    ;;
shutdown)
    echo "Shutting down..."
    sudo /sbin/shutdown -h now
    ;;
lock)
    echo "Locking screen..."
    eval $LOCK
    ;;
blank)
    echo "Blanking screen..."
    eval $BLANK
    ;;
*)
    echo "usage: power COMMAND" >&2
    echo "valid commands are: suspend hibernate reboot shutdown" >&2
    ;;
esac
